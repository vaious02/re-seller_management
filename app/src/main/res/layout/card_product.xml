<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relImageProduct"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/tvNostock"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="@string/no_stock"
                android:layout_centerInParent="true"
                android:textSize="@dimen/body_size"
                android:textColor="@color/white"
                android:background="@drawable/circle_black"
                android:gravity="center"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Cat seacial"
            android:layout_below="@+id/relImageProduct"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:maxLength="15"/>
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="฿100"
            android:textStyle="bold"
            android:layout_below="@+id/tvProductName"
            android:padding="5dp"/>
        <LinearLayout
            android:id="@+id/linStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProductName"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="เหลือ "
                android:layout_below="@+id/tvProductName"/>
            <TextView
                android:id="@+id/tvProductStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="0 ชิ้น"
                android:layout_below="@+id/tvProductName"/>
        </LinearLayout>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/linStock"
            android:layout_marginTop="5dp"
            />
        <RelativeLayout
            android:id="@+id/relProductDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rectangle_red"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_below="@+id/line">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/search"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_description"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>